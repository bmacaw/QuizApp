<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.quizapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_1_text_view" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:text="@string/answer_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_1_true"
                android:layout_weight="1" />

            <RadioButton
                android:text="@string/answer_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_1_false"
                android:layout_weight="1" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_2_text_view" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:text="@string/answer_2_choice_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_2_choice_1"
                android:layout_weight="1" />

            <RadioButton
                android:text="@string/answer_2_choice_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_2_choice_2"
                android:layout_weight="1" />

            <RadioButton
                android:text="@string/answer_2_choice_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_2_choice_3"
                android:layout_weight="1" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/question_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_3_text_view" />

        <CheckBox
            android:text="@string/answer_3_choice_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_3_choice_1" />

        <CheckBox
            android:text="@string/answer_3_choice_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_3_choice_2" />

        <CheckBox
            android:text="@string/answer_3_choice_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_3_choice_3" />

        <CheckBox
            android:text="@string/answer_3_choice_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_3_choice_4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/question_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_4_text_view" />

        <CheckBox
            android:text="@string/answer_4_choice_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_4_choice_1" />

        <CheckBox
            android:text="@string/answer_4_choice_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_4_choice_2" />

        <CheckBox
            android:text="@string/answer_4_choice_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_4_choice_3" />

        <CheckBox
            android:text="@string/answer_4_choice_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answer_4_choice_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_5_text_view" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="0"
        android:ems="10"
        android:id="@+id/answer_5_edit_text" />
    </LinearLayout>


</LinearLayout>
</ScrollView>
